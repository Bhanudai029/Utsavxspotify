rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated and unauthenticated users to read images
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Song images - allow upload for all users (including anonymous)
    match /song-images/{imageId} {
      allow read, write: if true;
      allow create: if request.resource.size < 15 * 1024 * 1024 && // 15MB limit
                       request.resource.contentType.matches('image/.*');
    }
    
    // Test uploads for Firebase testing
    match /test-uploads/{imageId} {
      allow read, write: if true;
      allow create: if request.resource.size < 15 * 1024 * 1024 && // 15MB limit
                       request.resource.contentType.matches('image/.*');
    }
    
    // Profile images
    match /profile-images/{imageId} {
      allow read, write: if true;
      allow create: if request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                       request.resource.contentType.matches('image/.*');
    }
    
    // Allow all other file operations for authenticated users
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}